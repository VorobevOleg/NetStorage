<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.java.netstorage.client.AuthController">
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="textFieldLogin" HBox.hgrow="ALWAYS" maxWidth="300" promptText="login"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" maxWidth="300" promptText="password"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>

    <HBox spacing="5" alignment="CENTER" maxWidth="320">
        <Button text="Авторизоваться" focusTraversable="false" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#authBtnAction"/>
        <Button text="Зарегистрироваться" focusTraversable="false" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#regBtnAction"/>
        <Button text="Выход" focusTraversable="false" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#exitBtnAction"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>

    <Label fx:id="authErrorLabel"/>

</VBox>

